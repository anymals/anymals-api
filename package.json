{
   "name": "anymalsapi",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/jest": "^24.0.16",
      "@types/node": "^12.6.9",
      "@types/uuid": "^3.4.5",
      "babel-jest": "^24.8.0",
      "gql2ts": "^1.10.1",
      "graphql-request": "^1.8.2",
      "jest": "^24.8.0",
      "start-server-and-test": "^1.9.1",
      "ts-jest": "^24.0.2",
      "ts-node": "8.3.0",
      "tslint": "^5.18.0",
      "tslint-config-prettier": "^1.18.0",
      "typescript": "3.5.3"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "bcrypt": "^3.0.6",
      "bcryptjs": "^2.4.3",
      "graphql": "^14.4.2",
      "graphql-import": "^0.7.1",
      "graphql-tools": "^4.0.5",
      "graphql-yoga": "^1.18.1",
      "nodemon": "^1.19.1",
      "pg": "^7.12.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.18",
      "uuid": "^3.3.2"
   },
   "scripts": {
      "start": "NODE_ENV=development nodemon --exec ts-node src/server.ts",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.ts",
      "test": "NODE_ENV=test jest --forceExit",
      "test-server": "NODE_ENV=test ts-node src/server.ts",
      "ci": "start-server-and-test test-server http://localhost:4001 test"
   },
   "jest": {
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
